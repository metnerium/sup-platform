{
  "name": "@sup-messenger/mobile",
  "version": "1.0.0",
  "private": true,
  "description": "SUP Messenger Mobile Client",
  "main": "index.js",
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "start": "react-native start",
