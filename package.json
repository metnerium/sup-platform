{
  "name": "sup-messenger",
  "version": "1.0.0",
  "description": "SUP - Secure messaging platform with E2E encryption",
  "private": true,
  "workspaces": [
    "services/*",
    "clients/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:websocket\"",
    "dev:api": "npm run dev --workspace=services/main-api",
    "dev:websocket": "npm run dev --workspace=services/websocket-service",
    "build": "npm run build --workspaces",
    "lint": "eslint . --ext .ts,.tsx",
    "test": "jest --coverage",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "migrate": "npm run migrate --workspace=services/main-api",
    "migrate:rollback": "npm run migrate:rollback --workspace=services/main-api"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "messenger",
    "e2e-encryption",
    "signal-protocol",
    "webrtc",
    "real-time"
  ],
  "author": "SUP Team",
  "license": "MIT"
}
